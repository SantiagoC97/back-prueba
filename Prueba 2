import cmath

# Definir un número complejo en coordenadas rectangulares
numero_complejo = 3 + 4j  # 3 + 4i

# Convertir el número complejo a coordenadas polares
magnitud, fase_radianes = cmath.polar(numero_complejo)

# Convertir la fase a grados si lo deseas
fase_grados = fase_radianes * 180 / cmath.pi

# Imprimir las coordenadas polares
print("Coordenadas polares:", magnitud, " < ", fase_grados)
print("Magnitud:", magnitud)
print("Fase (en grados):", fase_grados)
